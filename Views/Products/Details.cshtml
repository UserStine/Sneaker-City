@model Sneaker_City.Models.Product

<style>
    body {
        background-color: #121212; /* Dark theme like homepage */
        color: #ffffff;
    }

    .list-group-item {
        background-color: #1e1e1e;
        color: #ffffff;
        border-color: #333;
    }

    .form-control {
        background-color: #1e1e1e;
        color: #ffffff;
        border: 1px solid #444;
    }

        .form-control:focus {
            background-color: #1e1e1e;
            color: #ffffff;
            border-color: #ffc107;
            box-shadow: none;
        }

    label {
        color: #ffffff;
    }

    .btn-yellow {
        background-color: #ffc107;
        border: none;
        color: #000000;
    }

        .btn-yellow:hover {
            background-color: #e0a800;
            color: #000;
        }
</style>

<div class="container mt-5">
    <h2 class="display-4 fw-bold">@Model.Brand @Model.Model</h2>
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Model" />
        </div>
        <div class="col-md-6">
            <h3 class="text-warning">$@Model.Price</h3>
            <p class="text-muted">Release Date: @Model.ReleaseDate.ToString("MMMM dd, yyyy")</p>
            <p>@Model.Description</p>

            <h4 class="mt-3">Available Sizes:</h4>
            <ul class="list-group">
                @foreach (var variant in Model.Variants)
                {
                    <li class="list-group-item">
                        Size: @variant.Size - Quantity Available: @variant.Quantity
                    </li>
                }
            </ul>

            <!-- Add to Cart Form -->
            <form action="@Url.Action("AddToCart", "Carts")" method="post">
                <input type="hidden" name="productId" value="@Model.ProductId" />

                <div class="form-group mt-3">
                    <label for="size">Select Size:</label>
                    <select id="size" name="size" class="form-control" required>
                        @foreach (var variant in Model.Variants)
                        {
                            <option value="@variant.Size">@variant.Size</option>
                        }
                    </select>
                </div>

                <div class="form-group mt-3">
                    <label for="quantity">Quantity:</label>
                    <input type="number" id="quantity" name="quantity" class="form-control"
                           min="1" max="@Model.Variants.FirstOrDefault()?.Quantity ?? 1" required />
                </div>

                <button type="submit" class="btn btn-yellow mt-3">Add to Cart</button>
            </form>
        </div>
    </div>
</div>
