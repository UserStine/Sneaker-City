
 @model IEnumerable<Sneaker_City.Models.Product>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
   

}

<!-- HERO SECTION (HOME) -->
<section id="home" class="container-fluid py-5 text-white">
    <div class="row align-items-center px-4">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold">Summer Collections</h1>
            <p class="lead">Feel the difference of next-level comfort as you go head-to-head against some of the toughest runners around.</p>
            <a href="#" class="btn btn-warning text-dark mt-2">Buy Now</a>
            <div class="mt-4">
                <span class="text-info">90K+ Collections</span> |
                <span class="text-info">100K+ Users</span>
            </div>
            <div class="mt-2">
                <span>4.9</span>
                <span class="text-warning">★ ★ ★ ★ ★</span>
                <span>200k+ Total Reviews</span>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <img src="~/images/Sneaker.jpg" alt="Red Shoe" class="img-fluid rounded shadow" />
        </div>
    </div>
</section>

<!-- ABOUT SECTION -->
<section id="about" class="container py-5 text-light">
    <div class="row align-items-center">
        <div class="col-md-6 mb-4 mb-md-0">
            <img src="~/images/sneaker6.png" alt="Shoe" class="img-fluid rounded shadow" />
        </div>
        <div class="col-md-6">
            <h2 class="fw-bold text-white">About Us <span class="text-warning">→</span></h2>
            <p class="mt-3 text-light">
                We’re not just a sneaker store. Sneaker City is your curated hub for the latest drops and street-style heat.
                Whether you're a collector or a trendsetter — you’ll find something here that fits your vibe.
            </p>
            <div class="bg-dark border-start border-warning p-3 rounded mb-3">
                <h5 class="text-warning">🔥 Premium Kicks Only</h5>
                <p class="mb-0 text-light">Every pair is selected for quality, trend, and authenticity.</p>
            </div>
            <div class="bg-dark border-start border-warning p-3 rounded mb-3">
                <h5 class="text-warning">💸 Best Pricing</h5>
                <p class="mb-0 text-light">Top-tier style at unbeatable prices.</p>
            </div>
            <div class="bg-dark border-start border-warning p-3 rounded">
                <h5 class="text-warning">🚚 Fast Delivery</h5>
                <p class="mb-0 text-light">Get your sneakers delivered at your doorstep lightning fast.</p>
            </div>
        </div>
    </div>
</section>


<!-- Categories Section Heading -->
<section id="categories" class="text-center py-5 text-white" style="background-color: #111;"/>
    <div class="container mt-5">
        <h2 class="display-4 fw-bold">Explore Top Sneaker Brands</h2>
        <p class="lead text-warning" style="font-size: 1.25rem;">From Nike to New Balance — we’ve got your style covered.</p>
    </div>

</>

<!-- Sneaker Cards Section -->
<section class="container my-5 position-relative">
    <div class="row">
        @foreach (var sneaker in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card rounded-4 text-white border-0 shadow" style="background-color: #201e1e; overflow: hidden;">
                    <img src="@sneaker.ImageUrl" class="card-img-top p-3" alt="@sneaker.Model" />
                    <div class="card-body">
                        <h5 class="card-title d-flex justify-content-between">
                            <span>@sneaker.Brand @sneaker.Model</span>
                            <span>$@sneaker.Price</span>
                        </h5>
                        <p class="text-muted small">Released: @sneaker.ReleaseDate.ToShortDateString()</p>
                        <p class="text-warning mb-3">
                            4.9
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </p>
                        <!-- Link to the product details page -->
                        <a href="@Url.Action("Details", "Products", new { id = sneaker.ProductId })" class="btn btn-outline-warning btn-block rounded-pill font-weight-bold">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination Buttons at Bottom -->
    <div class="d-flex justify-content-center gap-2 mt-4">
        <button class="btn border-light text-white rounded-circle" style="width: 45px; height: 45px; transition: background-color 0.3s;"
                onmouseover="this.style.backgroundColor='#ffc107'" onmouseout="this.style.backgroundColor='transparent'">
            <i class="fas fa-chevron-left"></i>
        </button>

        <button class="btn border-light text-white rounded-circle" style="width: 45px; height: 45px; transition: background-color 0.3s;"
                onmouseover="this.style.backgroundColor='#ffc107'" onmouseout="this.style.backgroundColor='transparent'">
            <i class="fas fa-chevron-right"></i>
        </button>
    </div>
</section>


@section Styles {
    <style>
        body {
            background-color: #121212;
        }
    </style>
}
